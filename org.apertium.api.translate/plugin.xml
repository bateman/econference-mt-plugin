<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.5"?>
<plugin>

 <extension point="org.eclipse.ui.actionSets">
    <actionSet
        label="Translate Action Set"
        visible="true"
        id="org.apertium.api.translate.actionSet">
     
     <action
           class="org.apertium.api.translate.actions.TranslateConfigurationAction"
           icon="icons/translate_16.png"
           id="org.apertium.api.translate.actions.translateConfigurationAction"
           label="Configure the Translator"
           menubarPath="TranslatorMenu/TranslatorGroup"
           toolbarPath="TranslatorGroup"
           tooltip="Configure the Translator">         
     </action>
      
     </actionSet>
  </extension>

  <extension point="org.eclipse.ui.views">
     <view
        allowMultiple="false"
        category="TranslateViews"
        class="org.apertium.api.translate.views.TranslateView"
        icon="icons/translate_16.png"
        id="org.apertium.api.translate.views.translateView"
        name="Translations"/>
     
     <category
        id="TranslateViews"
        name="Translate"/>
     <view
           allowMultiple="true"
           category="TranslateViews"
           class="org.apertium.api.translate.views.TranslateOne2OneView"
           icon="icons/translate_16.png"
           id="org.apertium.api.translate.TranslateOne2OneView"
           name="Ongoing Talk"
           restorable="true">
     </view>
     <view
           allowMultiple="false"
           category="TranslateViews"
           class="org.apertium.api.translate.views.TranslateM2Mview"
           icon="icons/translate_16.png"
           id="org.apertium.api.translate.views.TranslateM2Mview"
           name="Ongoing chat ..."
           restorable="true">
     </view>
     <view
           allowMultiple="false"
           category="TranslateViews"
           class="org.apertium.api.translate.views.TranslateWhiteBoardView"
           icon="icons/view_decisions_place.png"
           id="org.apertium.api.translate.views.TranslateWhiteBoardView"
           name="Decisions place"
           restorable="true">
     </view>
     <view
           allowMultiple="false"
           category="econferenceViews"
           class="org.apertium.api.translate.views.TranslateM2MHandRaiseView"
           icon="icons/view_hr.png"
           id="org.apertium.api.translate.views.TranslateM2MHandRaiseView"
           name="Hand raising"
           restorable="true">
     </view>
  </extension>
  <extension
        point="org.eclipse.ui.startup">     
		<startup class="org.apertium.api.translate.TranslatePlugin" />
  </extension>
  <extension
        point="org.eclipse.ui.perspectiveExtensions">
     <perspectiveExtension
           targetID="it.uniba.di.cdg.xcore.one2one.ui.chatPerspective">
        <showInPart
              id="it.uniba.di.cdg.xcore.ui.views.talkView">
        </showInPart>
        <view
              closeable="true"
              id="org.apertium.api.translate.TranslateOne2OneView"
              minimized="false"
              moveable="true"
              ratio="0.25f"
              relationship="stack"
              relative="it.uniba.di.cdg.xcore.econference.ui.views.storedEventsView"
              showTitle="true"
              standalone="false"
              visible="true">
        </view>
     </perspectiveExtension>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="toolbar:org.apertium.api.translate.views.TranslateM2Mview">
        <command
              commandId="it.uniba.di.cdg.xcore.m2m.multiCallChatCommand"
              disabledIcon="icons/call-group-disabled20x20.png"
              hoverIcon="icons/call-group-hover20x20.png"
              icon="icons/call-group-enabled20x20.png"
              label="Call group / End call"
              style="push"
              tooltip="Call group / End call">
        </command>
     </menuContribution>
  </extension>
  <extension
        point="org.eclipse.ui.perspectives">
     <perspective
           class="org.apertium.api.translate.MTPerspective"
           fixed="true"
           icon="icons/translate_16.png"
           id="org.apertium.api.translate.MTPerspective"
           name="MTConference">
     </perspective>
  </extension>

<!--
  <extension point="org.eclipse.ui.startup">
     <startup class="org.apertium.api.translate.TranslatePlugin"></startup>
  </extension>
-->

</plugin>
